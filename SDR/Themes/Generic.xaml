<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SDR"
    xmlns:controls="using:SDR.Controls"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml">
    <Style TargetType="controls:Spectrogram">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Spectrogram">
                    <canvas:CanvasControl x:Name="PlotControl"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:Waterfall">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Waterfall">
                    <canvas:CanvasControl x:Name="PlotControl"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>